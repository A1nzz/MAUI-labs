<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiToolkitPopupSample.PopupNull"
>
    
        <StackLayout BackgroundColor="#fff" WidthRequest="200" HeightRequest="200"  VerticalOptions="Center" HorizontalOptions="Center" Padding="5, 40">
        
        <Label 
            x:Name="LabelName"
            TextColor="#000"
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            />
        <Button
            Margin="10"
            Text="Ok"
            TextColor="#fff"
            BackgroundColor="#000"
            Clicked="OnClose"
            CornerRadius="20"
            />
    </StackLayout>
    
</toolkit:Popup>